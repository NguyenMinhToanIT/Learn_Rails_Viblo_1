<div class="row">
    <h1>Login</h1>
    <div class="col-lg-12">
        <%= form_for :session, url: login_path do |f|%>
            <div class="form-group">
                <%= f.label :name, "Name", class: "col-md-6 control-label"%>
                <div class="col-md-6">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter user name"%>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :password, "Password", class: "col-md-6 control-label"%>
                <div class="col-md-6">
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter password"%>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-4">
                    <%= f.submit "Login", class:"btn btn-success"%>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-4">
                    <%= link_to "Register", new_user_path%>
                </div>
            </div>
        <%end%>
    </div>
</div>